# lucy Server Configuration â€” High-Speed Profile
#
# Maximum throughput. Matches the high-speed client profile.

role: "server"

log:
  level: "info"

listen:
  addr: ":9999"                   # CHANGE ME

network:
  interface: "eth0"               # CHANGE ME
  ipv4:
    addr: "10.0.0.100:9999"       # CHANGE ME
    router_mac: "aa:bb:cc:dd:ee:ff" # CHANGE ME
  pcap:
    sockbuf: 16777216

transport:
  protocol: "kcp"
  conn: 32
  tcpbuf: 262144

  kcp:
    mode: "manual"
    nodelay: 1
    interval: 10
    resend: 2
    nocongestion: 1
    wdelay: true
    acknodelay: false

    mtu: 1400
    rcvwnd: 32768
    sndwnd: 32768

    block: "none"
    key: "your-secret-key-here"   # CHANGE ME

    smuxbuf: 33554432
    streambuf: 16777216

# Firewall:
#   sudo iptables -t raw -A PREROUTING -p tcp --dport 9999 -j NOTRACK
#   sudo iptables -t raw -A OUTPUT -p tcp --sport 9999 -j NOTRACK
#   sudo iptables -t mangle -A OUTPUT -p tcp --sport 9999 --tcp-flags RST RST -j DROP
