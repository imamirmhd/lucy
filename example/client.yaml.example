# lucy Client Configuration — Normal Profile
#
# Conservative settings for everyday browsing, low CPU usage, encrypted.
# Suitable for general web browsing, messaging, and light streaming.

role: "client"

log:
  level: "info"                   # none, debug, info, warn, error, fatal

# SOCKS5 proxy
socks5:
  - listen: "127.0.0.1:1080"     # Local SOCKS5 proxy address
    # username: ""                # Optional SOCKS5 auth
    # password: ""
    # rate_limit:
    #   enabled: true
    #   max_fails: 5
    #   block_for: "5m"

# Port forwarding (optional, can be used alongside SOCKS5)
# forward:
#   - listen: "127.0.0.1:8080"
#     target: "127.0.0.1:80"
#     protocol: "tcp"

# Network
network:
  interface: "eth0"               # CHANGE ME: your network interface
  # guid: "\\Device\\NPF_{...}"  # Windows only (Npcap)
  ipv4:
    addr: "192.168.1.100:0"       # CHANGE ME: your local IP (port 0 = random)
    router_mac: "aa:bb:cc:dd:ee:ff" # CHANGE ME: gateway MAC address

  # IPv6 (optional)
  # ipv6:
  #   addr: "[2001:db8::1]:0"
  #   router_mac: "aa:bb:cc:dd:ee:ff"

# Server
server:
  addr: "10.0.0.100:9999"        # CHANGE ME: lucy server address

# Transport
transport:
  protocol: "kcp"
  conn: 1                         # Single connection — low overhead

  kcp:
    mode: "fast"                   # Good balance of speed and fairness
    mtu: 1350
    rcvwnd: 512
    sndwnd: 512
    block: "aes"                   # Encrypted — secure by default
    key: "your-secret-key-here"    # CHANGE ME: must match server